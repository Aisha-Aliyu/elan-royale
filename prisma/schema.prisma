generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum ReservationStatus {
  pending
  confirmed
  cancelled
}

model Reservation {
  id              String             @id @default(uuid())
  name            String
  email           String
  phone           String?
  partySize       Int
  reservationTime DateTime
  area            String?            // e.g. 'Main Dining', 'Sushi Bar', 'Koshitsu'
  status          ReservationStatus  @default(pending)
  notes           String?
  createdAt       DateTime           @default(now())

  @@index([email])
  @@index([reservationTime])
  @@index([status])
}